function checkBuytempcekeyAdd() { //
	if(!$('#ckkey').val()) {
		goto(false, '请填写您自定义的“CKKEY”');
		return false;
	}
	if($('#ckkey').val().length!=32) {
		goto(false, '“CKKEY”的长度必需是32位');
		return false;
	}
	if($('#ckkey').val().substring(0,8)!='ckplayer') {
		goto(false, '自定义的“CKKEY”的前8个字符必需是“ckplayer”');
		return false;
	}
	if(!$('#mobile').val()) {
		goto(false, '手机号没有填写');
		return false;
	}
	if(!$('#verify').val()) {
		goto(false, '手机验证码没有填写');
		return false;
	}
	if(!$('#ruleok').is(':checked')) {
		goto(false, '请阅读并同意购买协议');
		return false;
	}
}
function checkBuygoodsAdd() { //
	if(!$('#seekey').val()) {
		goto(false, '请填写观看码');
		return false;
	}
	if($('#seekey').val().length<6) {
		goto(false, '“观看码的长度不能小于6位');
		return false;
	}
	if($('#seekey').val().length>32) {
		goto(false, '“观看码的长度不能大于32位');
		return false;
	}
	if(!$('#mobile').val()) {
		goto(false, '手机号没有填写');
		return false;
	}
	if(!$('#verify').val()) {
		goto(false, '手机验证码没有填写');
		return false;
	}
	if(!$('#ruleok').is(':checked')) {
		goto(false, '请阅读并同意购买协议');
		return false;
	}
}
function checkhandbook(){
	if(!$('#mobile').val()) {
		goto(false, '手机号没有填写');
		return false;
	}
	if(!$('#seekey').val()) {
		goto(false, '请填写观看码');
		return false;
	}
	if($('#seekey').val().length<6) {
		goto(false, '“观看码的长度不能小于6位');
		return false;
	}
	if($('#seekey').val().length>32) {
		goto(false, '“观看码的长度不能大于32位');
		return false;
	}
}
function checkloginAdd() { //登录
	if(!$('#mobile').val()) {
		goto(false, '手机号没有填写');
		return false;
	}
	if(!$('#verify').val()) {
		goto(false, '手机验证码没有填写');
		return false;
	}
}