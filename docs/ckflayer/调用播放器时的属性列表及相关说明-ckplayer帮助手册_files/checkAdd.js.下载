//购买版权名称
function checkBuyckkeyAdd() { //
	if(!$('#copyname').val()) {
		goto(false, '请填写版权名称');
		return false;
	}
	if($('#copyweb').val()) {
		var xarr=$('#copyweb').val().split('/');
		if(xarr.length>1){
			goto(false, '限制域名只能输入顶级域名，不需要有http://或https://');
			return false;
		}
		xarr=$('#copyweb').val().split('.');
		if(xarr.length!=2){
			goto(false, '限制域名只能输入顶级域名，不需要有http://或https://');
			return false;
		}
	}
	if(!$('#mobile').val()) {
		goto(false, '手机号没有填写');
		return false;
	}
	
	if(!$('#verify').val()) {
		goto(false, '手机验证码没有填写');
		return false;
	}
	if(!$('#ruleok').is(':checked')) {
		goto(false, '请阅读并同意购买协议');
		return false;
	}
}
//升级版权名称
function checkBuyupkeyAdd() { //
	if(!$('#copyname').val()) {
		goto(false, '请填写版权名称');
		return false;
	}
	if($('#copyweb').val()) {
		var xarr=$('#copyweb').val().split('/');
		if(xarr.length>1){
			goto(false, '限制域名只能输入顶级域名，不需要有http://或https://');
			return false;
		}
		xarr=$('#copyweb').val().split('.');
		if(xarr.length!=2){
			goto(false, '限制域名只能输入顶级域名，不需要有http://或https://');
			return false;
		}
	}
	if(!$('#mobile').val()) {
		goto(false, '手机号没有填写');
		return false;
	}
	
	if(!$('#verify').val()) {
		goto(false, '手机验证码没有填写');
		return false;
	}
	if(!$('#ruleok').is(':checked')) {
		goto(false, '请阅读并同意购买协议');
		return false;
	}
}
function checkBuycekeyAdd() { //
	if(!$('#ckkey').val()) {
		goto(false, '请填写“CKKEY”');
		return false;
	}
	if($('#ckkey').val().length!=32) {
		goto(false, '“CKKEY”的长度必需是32位');
		return false;
	}
	if(!$('#mobile').val()) {
		goto(false, '手机号没有填写');
		return false;
	}
	if(!$('#verify').val()) {
		goto(false, '手机验证码没有填写');
		return false;
	}
	if(!$('#ruleok').is(':checked')) {
		goto(false, '请阅读并同意购买协议');
		return false;
	}
}
